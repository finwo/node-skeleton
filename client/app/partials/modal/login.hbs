{{>modal/precontent id='login'}}
<h2>{{i18n "login"}}</h2>
<form data-script="helpers/form-api" action="user.login" method="post">
    <div class="form-group">
        <input type="text" id="login-username" name="username" data-script="helpers/input-bar" />
        <i class="bar"></i>
        <label for="login-username">{{i18n "label-username"}}</label>
    </div>
    <div class="form-group">
        <input type="password" id="login-password" name="password" data-script="helpers/input-bar" />
        <i class="bar"></i>
        <label for="login-password">{{i18n "label-password"}}</label>
    </div>
    <div class="button-container">
        <button class="btn btn-default" data-action="submit">{{i18n "label-login-button"}}</button>
    </div>
</form>
{{>modal/postcontent}}
