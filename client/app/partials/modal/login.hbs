{{>modal/precontent id='login'}}
<h2>{{i18n "login"}}</h2>
<form data-script="helpers/form-api">
    <div class="form-group">
        <input type="text" id="login-username" required />
        <i class="bar"></i>
        <label for="login-username">{{i18n "label-username"}}</label>
    </div>
    <div class="form-group">
        <input type="password" id="login-password" required />
        <i class="bar"></i>
        <label for="login-password">{{i18n "label-password"}}</label>
    </div>
    <div class="button-container">
        <button class="btn-default">{{i18n "label-login-button"}}</button>
    </div>
</form>
{{>modal/postcontent}}
